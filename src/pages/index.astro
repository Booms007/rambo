---
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'BSides Chennai',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[]}
    image={{ src: '~/assets/images/website-hero.svg', alt: 'Chennai', width:3000, height: 800, class: 'hero'}}
  >
    <Fragment slot="title">
    BSides Chennai - 2024
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">BSides Chennai</span> is a community-led framework for people in chennai who are interested in exploring the world of <span class="font-semibold">Cybersecurity</span>.</span>
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline=""
    title="What you can expect at the Conference"
    subtitle="From one of the most professional and collaborative communities in Chennai."
    items={[
      {
        title: 'Technical Talks',
        description:
          'Brief discussions and presentations on cutting edge technologies delivered by SMEs from cyber security industry.',
        icon: 'tabler:microphone-2',
      },
      {
        title: 'CxO Panel Discussion',
        description:
          'Top-tier industry experts with backgrounds as CISOs, CEOs, VPs, and SVPs are engaged in discussions regarding diverse security challenges prevalent in the industry.',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Vendor Booths',
        description:
          'A one stop market place where you can connect with various vendors of cybersecurity technologies / solutions available in the industry',
        icon: 'tabler:building-store',
      },
      {
        title: 'Capture The Flag',
        description:
          'A cool way to showcase your cybersecurity skills by participating and hunting down the flags in our challenges across multiple levels and categories.',
        icon: 'tabler:flag',
      },
      {
        title: 'Security Trainings',
        description:
          "At BSides, we strive to give back to the community by equipping the participants to provide with the right skills with hands-on knowledge through various sessions.",
        icon: 'tabler:school',
      },
      {
        title: 'Security Villages',
        description:
          'An ultimate environment to discuss on various topics like career consulting, lockpicking, social engineering, hardware hacking and etc.',
        icon: 'tabler:speakerphone',
      },
    ]}
  />

